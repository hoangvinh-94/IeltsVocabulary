<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when a row is being pressed, but hasn't yet been activated (finger down) -->
    <item android:drawable="@color/test_check_press" android:state_pressed="true" />

    <!-- When the view is "activated".  In SINGLE_CHOICE_MODE, it flags the active row
         of a ListView -->
    <item android:drawable="@color/colorAccent" android:state_activated="true" />

    <!-- Default, "just hangin' out" state. -->
    <item android:drawable="@color/test_check" />
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#00FF00" android:startColor="#000000" />
            <corners android:radius="5dp" />
            <stroke android:width="5px" android:color="@color/test_dark_blue" />
        </shape>
    </item>
</selector>