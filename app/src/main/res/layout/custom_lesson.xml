<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/recordWord"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:src="@drawable/record" />

        <ImageView
            android:id="@+id/speakWord"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:cropToPadding="true"
            android:scaleType="fitXY"
            android:layout_alignBaseline="@+id/recordWord"
            android:layout_alignParentRight="true"
            android:src="@drawable/volume" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/engWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abandon (v)"
                android:textColor="#1E90FF"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="từ bỏ"
                android:textAlignment="center"
                android:textColor="#1E90FF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/engWF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ngoại động từ"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meanWF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="từ bỏ, bỏ rơi, ruồng bỏ"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/exampleENG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="to abandon a hope"
                    android:textAlignment="center"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/exampleVIET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Từ bỏ hy vọng"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/engWF1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tính Từ"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meanWF1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="từ bỏ, bỏ rơi, ruồng bỏ"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/exampleENG1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="to abandon a hope"
                    android:textAlignment="center"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/exampleVIET1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Từ bỏ hy vọng"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>