<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp"
android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:weightSum="1"
    >

    <ImageButton
        android:id="@+id/recordWord"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        android:layout_weight="0.05"
        android:background="@drawable/record" />

    <TextView
        android:id="@+id/engWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abandon (v)"
        android:textColor="#1E90FF"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_weight="0.9"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/speakWord"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        android:layout_weight="0.05"
        android:background="@drawable/volume" />

</LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phonetic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/ei'nt/"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/mean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="từ bỏ"
                android:textColor="#1E90FF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/engWF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ngoại động từ"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meanWF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="từ bỏ, bỏ rơi, ruồng bỏ"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exampleENG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="to abandon a hope"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/exampleVIET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Từ bỏ hy vọng"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/engWF1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tính Từ"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meanWF1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="từ bỏ, bỏ rơi, ruồng bỏ"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exampleENG1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="to abandon a hope"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/exampleVIET1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Từ bỏ hy vọng"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>